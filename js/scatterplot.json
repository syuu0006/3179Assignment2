{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background":"aliceblue",
  "repeat": ["GDP per capita","Perceptions of corruption", "Generosity", "Freedom to make life choices", "Healthy life expectancy","Social support"],
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "NORTHERN_AMERICA",
          "LATIN",
          "EUROPE",
          "AFRICA",
          "ASIA",
          "OCEANIA",
          "NEAR_EAST"
        ],
        "labels": [
          "Show All",
          "North America",
          "Latin",
          "Europe",
          "Africa",
          "Asia",
          "Oceania",
          "Near East"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Region == Continent_selection"
    }
  ],
  "spec":{
    "data": {
    "url": "https://raw.githubusercontent.com/syuu0006/hw9/main/data/FIT3179dataset.csv"
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark":"point",
      "width":270,
      "height":270,
  "encoding": {
    "x": {"field": {"repeat": "repeat"}, "type": "quantitative"},
      "y": {
        "field": "Score",
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "NORTHERN_AMERICA",
              "LATIN",
              "EUROPE",
              "AFRICA",
              "ASIA",
              "OCEANIA",
              "NEAR_EAST"
            ],
            "range": [
              "darkgrey",
              "purple",
              "darkorange",
              "darkred",
              "green",
              "blue",
              "red"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
      "tooltip":[
        {"field":"Region","type":"nominal"},
        {"field":"Country", "type": "nominal"},
        {"field": {"repeat": "repeat"}, "type": "quantitative"},
        {"field":"Score","type": "quantitative"}
      ]
    }
  }
]
},
"columns": 3
}
